
public class Ex_prac2_1130 {

	public static void main(String[] args) {
		//2장 연습문제
		int ary[] = new int[5];
		int sum = 0, idx=0;

		for (int i = 0; i < ary.length; i++) {
			int n = (int) (Math.random() * 10) + 1;
			// 1<=n<11
			if (n % 2 !=0) {
				continue;
			}
			else {
				ary[idx] = n;
				sum += ary[idx];
				System.out.println("ary["+idx+"] : "+ary[idx]);
				idx++;
			}
		}
		System.out.println("sum : "+sum);
	}
}
